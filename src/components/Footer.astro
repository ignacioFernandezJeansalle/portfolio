---
import { LINKS } from "@/const/links";
import { DEVELOPED_WITH } from "@/const/developedWith";
import Section from "@/components/Section.astro";
import Pill from "@/components/Pill.astro";
import IconGithub from "@/icons/IconGithub.astro";
import IconLinkedin from "@/icons/IconLinkedin.astro";
---

<footer class="bg-slate-200 py-20">
  <Section class="flex flex-col md:flex-row md:justify-between gap-12">
    <div class="flex flex-col items-center md:items-start gap-2">
      <p class="text-lg uppercase text-center">Ignacio Fern√°ndez Jeansalle</p>
      <p class="text-md">{LINKS.gmail}</p>
      <div class="flex justify-center gap-4">
        <a href={LINKS.linkedin} target="_blank" aria-label="Ir al perfil de LinkedIn" rel="noopener">
          <IconLinkedin class="size-6 hover:text-slate-600 hover:scale-110" />
        </a>
        <a href={LINKS.github} target="_blank" aria-label="Ir al perfil de GitHub" rel="noopener">
          <IconGithub class="size-6 hover:text-slate-600 hover:scale-110" /></a
        >
      </div>
    </div>

    <ul class="flex justify-center md:justify-end md:items-start flex-wrap gap-3">
      {
        DEVELOPED_WITH.map((element) => (
          <Pill class="bg-slate-300">
            <element.icon class="w-3 h-auto" /> {element.name}
          </Pill>
        ))
      }
    </ul>
  </Section>
</footer>
