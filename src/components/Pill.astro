---
const { href, arialLabel } = Astro.props;
---

<a
  href={href}
  target="_blank"
  aria-label={arialLabel}
  rel="noopener"
  class="flex items-center gap-x-1 sm:gap-x-2 border border-gray-500 rounded-xl py-1 px-4 hover:text-green-500 hover:scale-105 h-full bg-gray-800 text-sm sm:text-base"
>
  <slot />
</a>
