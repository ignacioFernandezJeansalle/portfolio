---
import IconChevronLeft from "@/icons/IconChevronLeft.astro";

const { element } = Astro.props;
const { position, company, date, tasks } = element;
---

<article class="mt-10 flex flex-col p-4 sm:p-6 bg-slate-200 rounded">
  <div class="flex flex-col md:flex-row items-start md:items-center gap-2 mb-4">
    <h3 class="text-2xl min-[390px]:text-3xl text-cblue-700 font-light uppercase">{position}</h3>
    <IconChevronLeft class="hidden md:block" />
    <h4 class="text-sm w-fit rounded px-2 py-1 bg-slate-50 font-medium">{company}</h4>
  </div>
  <span class="text-sm border-b border-slate-400 pb-2">{date}</span>
  <ul class="list-disc pl-5 pt-2">
    {tasks.map((task) => <li set:html={task} />)}
  </ul>
</article>
