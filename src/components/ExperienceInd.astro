---
import IconChevronLeft from "@/icons/IconChevronLeft.astro";

const { work } = Astro.props;
const { position, company, date, tasks } = work;
---

<article class="flex flex-col gap-2 py-6">
  <div class="flex flex-col sm:flex-row items-start sm:items-center gap-2">
    <h3 class="text-lg text-green-500">{position}</h3>
    <IconChevronLeft class="hidden sm:block" />
    <h4 class="text-sm border rounded-xl border-gray-700 px-2 py-1">{company}</h4>
  </div>
  <span class="text-sm">{date}</span>
  <ul class="list-disc pl-5">
    {tasks.map((task) => <li>{task}</li>)}
  </ul>
</article>
