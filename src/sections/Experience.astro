---
import { FRONTEND_WORKS } from "@/const/worksFrontEnd";
import { INDUSTRIAL_WORKS } from "@/const/worksIndustrial";

import Section from "@/components/Section.astro";
import CardProjects from "@/components/CardProjects.astro";
import CardIndustrialWorks from "@/components/CardIndustrialWorks.astro";

import IconExperienceFE from "@/icons/IconExperienceFE.astro";
import IconExperienceInd from "@/icons/IconExperienceInd.astro";
---

<Section id="experiencia" class="py-20">
  <div class="flex items-center gap-x-2">
    <IconExperienceFE class="flex-shrink-0 size-6 sm:size-8" />
    <h2 class="text-2xl sm:text-3xl">Experiencia frontend</h2>
  </div>

  {FRONTEND_WORKS.map((element) => <CardProjects element={element} />)}

  <div class="flex items-center gap-x-2 mt-20 mb-4">
    <IconExperienceInd class="flex-shrink-0 size-6 sm:size-8" />
    <h2 class="text-2xl sm:text-3xl">Experiencia industrial</h2>
  </div>

  {INDUSTRIAL_WORKS.map((element) => <CardIndustrialWorks element={element} />)}
</Section>
