---
import { PROJECTS } from "@/const/projects";

import Section from "@/components/Section.astro";
import CardProjects from "@/components/CardProjects.astro";

import IconProjects from "@/icons/IconProjects.astro";
---

<Section id="proyectos" class="py-20">
  <div class="flex items-center gap-x-2">
    <IconProjects class="flex-shrink-0 size-6 sm:size-8" />
    <h2 class="text-2xl sm:text-3xl">Proyectos</h2>
  </div>

  {PROJECTS.map((element) => <CardProjects element={element} />)}
</Section>
